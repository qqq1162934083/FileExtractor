<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="MenuItem" x:Key="style_myContextMenuItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Button Height="20" Background="Transparent" Content="{TemplateBinding Header}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="PART_border" Background="{TemplateBinding Background}" Padding="3">
                                    <TextBlock Foreground="#f1f1f1" Text="{Binding RelativeSource={RelativeSource AncestorType=MenuItem,Mode=FindAncestor},Path=Header}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="PART_border" Property="Background" Value="#333334"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>