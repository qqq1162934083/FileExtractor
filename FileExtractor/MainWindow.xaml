<Window x:Class="FileExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExtractor"
        mc:Ignorable="d"
        Style="{StaticResource style_myWindow}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Background="Transparent" HorizontalAlignment="Left" Height="306" Margin="47,56,0,0" VerticalAlignment="Top" Width="225">
            <TabItem Background="Transparent" Header="文件">
                <Grid Background="Transparent">
                    <ListBox Style="{StaticResource style_myListBox}"/>
                </Grid>
            </TabItem>
            <TabItem Background="Transparent" Header="目录">
                <Grid Background="Transparent">
                    <ListBox Style="{StaticResource style_myListBox}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
