<Window x:Class="MyTool.VariableBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTool"
        mc:Ignorable="d"
        Title="输入你要修改的值" Height="209" Width="410"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tb_destVarValue" Text="" TextWrapping="Wrap" Margin="10,10,10,42"/>
        <Button x:Name="btn_ok" Click="btn_ok_Click" Content="确定" Margin="0,0,95,12" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="51"/>
        <Button x:Name="btn_cancel" Click="btn_cancel_Click" Content="取消" Margin="0,0,26,12" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="51"/>
    </Grid>
</Window>
