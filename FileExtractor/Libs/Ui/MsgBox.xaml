<Window x:Class="MyTool.MsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTool"
        mc:Ignorable="d"
        Title="标题" Height="179" Width="413"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8,8,8,8">
        <TextBox x:Name="tb_msg" BorderThickness="0" IsReadOnly="true" Background="Transparent" TextWrapping="Wrap">消息体</TextBox>
        <Button x:Name="btn_ok" Click="btn_ok_Click" Content="确定" Margin="0,0,158,32" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="60"/>
        <Button x:Name="btn_cancel" Click="btn_cancel_Click" Content="取消" Margin="0,0,77,32" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="60"/>
    </Grid>
</Window>
